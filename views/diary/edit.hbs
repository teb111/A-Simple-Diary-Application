<h3>Edit Story</h3>
<div class="row">
    <form action="/diary/{{diary._id}}" method="POST" class="col s12">
      <input type="hidden" name="_method" value="PUT"> 
      <div class="row">
         <div class="input-field">
             <input type="text" id="title" name="title" value="{{diary.title}}">
             <label for="title">Title</label>
         </div>
     </div>

     <div class="row">
         <div class="input-field">
             <h5>Tell the World Your Story</h5>
             <textarea name="body" id="body">
                 {{diary.body}}
             </textarea>
         </div>
     </div>

     <div class="row">
         <input type="submit" value="Save" class="btn">
         <a href="/dashboard" class="btn orange">Cancel</a>
     </div>
    </form>
</div>